{
  "include": ["static/**/*"],
  "compilerOptions": {
    "noEmit": true,
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "ES2020",
    "module": "nodeNext",
    "moduleResolution": "nodeNext"
  }
}
